package com.mycompany.drawing;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.util.HashMap;
import java.util.Map;
public class Elipse extends Shapes{
	//private int x;
    //private int y;
    private double radius1;
    private double radius2;
   private Map<String ,Double> mp=new HashMap<String,Double>();
   Elipse(){
		mp.put("radius1", 0.0);
		mp.put("radius2",0.0);
	}
    public void setradius1(double radius1)
    {
        this.radius1=radius1;
        mp.put("radius1", radius1);
        setProperties(mp);
    }
    public double getradius1()
    {
      return radius1;   
    }
     public void setradius2(double radius2)
    {
        this.radius2=radius2;
        mp.put("radius2", radius2);
        setProperties(mp);
    }
     public double getradius2()
     {
         return radius2;
     }
    
    public void draw(Graphics g)
    {
    	super.draw(g);
		Graphics2D g2=(Graphics2D)g;
		g2.setColor(Color.RED);
		g2.drawOval((getPosition().x)-((int)getradius1()/2),(getPosition().y)-((int)getradius2()/2),(int)getradius1(),(int)getradius2());
    }
}

