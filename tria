    Tria(){
    	mp.put("x1",0.0);
    	mp.put("x2",0.0);
    	mp.put("x3",0.0);
    	mp.put("y1",0.0);
    	mp.put("y2",0.0);
    	mp.put("y3",0.0);
    }

    public void setx(int arr[]) {
    	x=arr;
    }
    public void sety(int arr[]) {
    	y=arr;
    }
    public int[] getx() {
    	return x;
    }
    public int[] gety() {
    	return y;
    }
    public void draw(Graphics g)
    {
    	super.draw(g);
		Graphics2D g2=(Graphics2D)g;
		g2.setColor(Color.black);
        g2.drawPolygon(x, y, 3);
        
    }
}

