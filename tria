import java.util.Map;
public class Tria extends Shapes{
	private int x[];
    private int y[];
    private Map< String,Double> mp=new HashMap< String,Double>();
   /* public Tria(int x[],int y[])
    {
       for(int i=0;i<3;i++)
       {
           this.x[i]=x[i];
       }
        for(int i=0;i<3;i++)
       {
